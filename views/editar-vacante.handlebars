

<main class="contenedos">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
    
        <h3>Información General</h3>

        <div class="campo">
            <label >Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: REact Developer" value="{{vacante.titulo}}" required>
        </div>
         <div class="campo">
            <label >Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: Empresa" value="{{vacante.empresa}}" required>
        </div>
        <div class="campo">
            <label >Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: México" value="{{vacante.ubicacion}}" required>
        </div>
           <div class="campo">
            <label >Salario(USD)</label>
            <input type="text" name="salario" placeholder="Ej: $500" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                 {{#tipoContrato vacante.contrato}}
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo completo">Tiempo completo</option>
                <option value="MEdio Tiempo">MEdio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimentos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo cetrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios"  class="btn btn-azul">
        </div>
    </form>
</main>